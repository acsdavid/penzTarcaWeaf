@model IEnumerable<penztarca.Models.penzTarca>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th align="center">
            @Html.DisplayNameFor(model => model.Count)
        </th>
        <th align="center">
            @Html.DisplayNameFor(model => model.IsDone)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td id="osszegC" align="center" style="font-weight:bold">
                @Html.DisplayFor(modelItem => item.Count)
            </td>
            <td align="center" id="isD"> 
                @Html.DisplayFor(modelItem => item.IsDone)

            </td>
            <td>
                @Html.ActionLink("Szerkesztés", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Leírás", "Details", new { id = item.Id }) |
                @Html.ActionLink("Törlés", "Delete", new { id = item.Id })
            </td>
            <td>
                @Html.DisplayFor(model => item.User.UserName)
            </td>
</tr>
        
    }
    <tr>
        <td ><b>Összesen: </b></td>
        <td align="center"><b> @Model.Sum(i => i.Count) </b></td>
        <td id="checkB" align="center"> </td>
    </tr>

</table>
<br /><br />